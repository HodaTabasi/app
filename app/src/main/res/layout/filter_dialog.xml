<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="15dp"
        android:text="Filter"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Sort"
                android:textSize="20sp"
                 />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#bbb"
                    android:padding="15dp"
                    android:text="Most popular"
                    android:textColor="#888" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#bbb"
                    android:padding="15dp"
                    android:text="Most viewed"
                    android:textColor="#888" />


                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#bbb"
                    android:padding="15dp"
                    android:text="Most recent"
                    android:textColor="#888" />


            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="#ddd" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:text="Size"
                    android:textSize="20sp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_border"
                            android:text="XS"
                            android:gravity="center"
                            />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_border"
                            android:text="S"
                            android:gravity="center"
                            />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:text="M"
                            android:layout_margin="5dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:textColor="#fff"
                            android:gravity="center"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_border"
                            android:text="L"
                            android:gravity="center"
                            />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_border"
                            android:text="XL"
                            android:gravity="center"
                            />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/circle_border"
                            android:text="XXL"
                            android:gravity="center"
                            />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="#ddd" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="15dp"
                    android:text="Color"
                    android:textSize="20sp"
                   />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#000"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#fc7114"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#1ee6fa"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#ff3399"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#7178fd"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#669c06"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#9a06cf"/>

                        <Button
                            android:layout_margin="2dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/circle_border"
                            android:backgroundTint="#ffd900"/>

                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20dp"
                android:background="#ddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:text="Price"
                    android:textSize="20sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:text="0$"
                    android:textSize="20sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <SeekBar
                android:id="@+id/priceseekbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:max="1000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="show items"
                android:layout_marginStart="30dp"
               android:ems="2"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_border"
                android:backgroundTint="@color/colorPrimary"
                android:padding="16dp"
                android:textColor="#fff"
                android:gravity="center"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>