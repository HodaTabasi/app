<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    android:background="@android:color/white"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <ImageView
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:src="@drawable/watch"
            android:scaleType="fitXY"
            android:id="@+id/add_card_item_img"
            android:layout_margin="5dp"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:padding="16dp">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="whatch"
              android:textColor="@android:color/black"
              android:textSize="16sp"
              android:id="@+id/add_card_item_name"
              android:padding="5dp"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
           android:orientation="horizontal"
              android:padding="5dp">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="350"
                  android:textSize="16sp"
                  android:textColor="@android:color/black"
                  android:id="@+id/add_cart_item_price"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="$"
                  android:textSize="16sp"
                  android:textColor="@android:color/black"/>
              <View
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:background="@drawable/circle"
                  android:layout_marginStart="10dp"
                  android:backgroundTint="@android:color/black"
                  android:id="@+id/add_cart_item_color"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="10dp"
              android:layout_marginTop="30dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/shape_rounded_rectangle"
              android:backgroundTint="@color/lighter_gray">
              <ImageView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_negative"
                  android:layout_weight="1"
                  android:id="@+id/count_down"
                  android:tint="#fff"
                 />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="1"
                  android:textSize="18sp"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:id="@+id/item_count"

                 />
              <ImageView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_add_plus"
                  android:layout_weight="0.92"
                  android:id="@+id/count_up"
                  android:tint="#fff"
                  />

          </LinearLayout>

      </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>